<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GrievanceForum</title>

    <link rel="manifest" href="app.webmanifest" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/08c3f952c9.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat&family=Quicksand:wght@600&display=swap');
        body{
            background-color:white;
            font-family: 'Montserrat', sans-serif;
            font-family: 'Quicksand', sans-serif;
        }
        .form-check-input:checked+.card{
            border: 2px solid var(--bs-primary);
            transition: border .2s;
        }
        @media (min-width:100px)  { }
        @media (min-width:600px)  { }
        @media (min-width:1281px) { }
    </style>
</head>
<body>
<div class="container-fluid">

    <nav class="navbar bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="../">
                <i class="fa-regular fa-snowflake d-inline-block "></i>
                GrievanceForum
            </a>
            <button class="btn btn-sm btn-outline-primary rounded-pill" style="width:140px">
                <img src="<%=userInfo['picture']%>" class="rounded-circle" style="width:30%;"/>
                <%=userInfo["name"]%>
            </button>
        </div>
    </nav><br>
    <nav class="navbar fixed-bottom bg-light">
        <div class="container-fluid">
            <div class="row w-100 text-center">
                <div class="col">
                    <a href="dashboard" type="button" class="btn btn-primary"> <i class="fa-solid fa-house"></i></a>
                </div>
                <div class="col">
                    <a href="manage" type="button" class="btn btn-link"> <i class="fa-solid fa-plus"></i></a>
                </div>
                <div class="col">
                    <a href="notification" type="button" class="btn btn-link"> <i class="fa-solid fa-bell"></i></a>
                </div>
                <div class="col">
                    <a href="profile" type="button" class="btn btn-link"> <i class="fa-solid fa-user"></i></a>
                </div>
            </div>
        </div>
    </nav>
    <div class="card">
        <div class="card-body" style="overflow:hidden">
            <div class="row">
                <div class="col-9">
                    <div class="input-group mb-3">
                        <input id="SearchBox" type="text" class="form-control" placeholder="Search GrievanceForum">
                        <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                    </div>
                </div>
                <div class="col-2">
                    <button class="btn btn-primary" onclick="getPostFeed(0)">Search</button>
                </div>
            </div>
            <button class="btn btn-sm" data-bs-toggle="collapse" href="#collapsePostInfo" role="button" aria-expanded="false" aria-controls="collapsePostInfo">
                <input class="form-check-input" type="checkbox" id="FilterCheckBox">
                <label class="form-check-label" for="FilterCheckBox">
                    <i class="fa-solid fa-filter"></i> Filter Search
                </label>
            </button>

            <div class="collapse w-100" style="border:0" id="collapsePostInfo">
                <div class="card card-body">
                    <br>
                    <div>
                        <label class="form-label">Post Category</label><br>
                        <select id="categorySelect" class="form-select" aria-label="Default select example">
                            <option value="0" selected>All Category</option>
                            <%for(let i = 0; i < category.length;i++){%>
                            <option value="<%=i%>"><%=category[i]['title']%></option>
                            <%}%>
                        </select>
                    </div><br>
                    <div>
                        <label class="form-label">Sort Post By</label><br>
                        <div class="row">
                            <div class="col-7">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="SortPostRadio1" value="0">
                                    <label class="form-check-label" for="SortPostRadio1">Top</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="SortPostRadio2" value="1" checked>
                                    <label class="form-check-label" for="SortPostRadio2">New</label>
                                </div>
                            </div>
                            <div class="col-5">
                                <select id="sortDate" class="form-select" aria-label="Default select example">
                                    <option value="0">Today</option>
                                    <option value="1">This Week</option>
                                    <option value="2" selected>This Month</option>
                                    <option value="3">This Year</option>
                                    <option value="3">LifeTime</option>
                                </select>
                            </div>
                        </div>
                    </div><br>
                    <div>
                        <label class="form-label">Post Comment & Support</label><br>
                        <div class="row">
                            <div class="col">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="CanComment">
                                    <label class="form-check-label" for="CanComment">
                                    Can Comment
                                    </label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="CanSupport">
                                    <label class="form-check-label" for="CanSupport">
                                    Can Support
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div><br>
                </div>
            </div>
        </div>
    </div>

    <br>
    <div id="category">
        <p class="fs-3">Categories</p>
        <div class="row row-cols-2">
            <%for(let i = 0; i < category.length;i++){%>
                <div class="col">
                    <label class="form-check-label" for="<%=category[i]['title']%>Radio">
                    <input class="form-check-input" onclick="getPostFeed(2,<%=category[i]['sno']%>)" style="visibility: hidden;" type="radio" name="CategoryRadio" id="<%=category[i]['title']%>Radio">
                    <div class="card mb-3">
                        <div class="row" style="margin-left:2px;">
                            <div class="col-4 d-flex align-items-center justify-content-center">
                                <img src="/images/<%=category[i]['image']%>" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-8">
                                <div class="card-body">
                                <h5 class="card-title" style="color:var(--bs-primary)"><i class="<%=category[i]['icon']%>"></i> <%=category[i]['title']%></h5>
                                <p class="card-text"><%=category[i]['description']%></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    </label>
                </div>
            <%}%>
        </div>
    </div>

    <hr>
    <div>
        <div class="row">
            <div class="col-4 d-flex align-items-center justify-content-center">
                <p class="fs-3">Your Feed</p>
            </div>
            <div class="col-8">
                <div id="searchResultTextBox" style="visibility:hidden" class="alert alert-primary" role="alert">
                    <div class="row">
                    <div class="col-7" id="searchResultText">From Search Result</div>
                    <div class="col-5"><button class="btn btn-sm btn-outline-primary" onclick="getPostFeed(0)" style="width:100%">Reset</button></div>
                    </div>
                </div>
            </div>
        </div>
        <div id="postFeed">

        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center" id="PostLoader" style="margin-top:20%">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
    </div>

</div>
<script>

    function getPostFeed(PostLoadMode,categoryid=0){

        function postRes(data, status){
            if(data.length == 0){
                document.getElementById("postFeed").insertAdjacentHTML('beforeend', `
                <div class="card mb-3" style="border:0;">
                    <div class="row g-0">
                        <div class="col-4">
                        <img  src="images/searchQuery/${parseInt(Math.random()*15)}.png" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-8 d-flex align-items-center justify-content-center">
                            <div class="card-body">
                                <h5 class="card-title">❌ No Post Found</h5>
                                <p class="card-text">Click <code>Reset</code> To Reset Your Post Feed!.</p>
                            </div>
                        </div>
                    </div>
                </div>
                `);
            }

            for(let i = 0; i < data.length; i++){
                document.getElementById("postFeed").insertAdjacentHTML( 'beforeend', `
                <a href="../post/:id" style="color:black;text-decoration: none !important;">
                    <div class="alert alert-light" style="border:1px solid var(--bs-secondary);overflow:hidden" role="alert">
                        <div class="row">
                            <div class="col-9"><p class="alert-heading fs-4">${data[i]['title']}</p></div>
                            <div class="col-3 text-align-end text-muted" style="font-size:12px;">${data[i]['datetime']}</div>
                        </div>
                        
                        <p class="text-muted">${data[i]['description']}</p>
                        <hr>
                        <a href="" class="btn btn-sm btn-outline-secondary">
                            <div class="row">
                                <div class="col-1">
                                    <img src="`+data[i]['picture']+`" class="rounded-circle" style="width:20px"/>
                                </div>
                                <div class="col-9 text-align-start">`+data[i]['name']+`</div>
                            </div>
                        </a>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-sm btn-outline-secondary"><i class="fa-regular fa-eye"></i> ${data[i]['views']}</button>`
                            + ((data[i]['comment'] == 1)?`<button type="button" class="btn btn-sm btn-outline-secondary"><i class="fa-regular fa-message"></i> ${data[i]['comments']}</button>`:``)
                            + ((data[i]['support'] == 1)?`<button type="button" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-hand-sparkles"></i> ${data[i]['likes']}</button>`:``)+
                        `</div>
                        <button type="button" class="btn btn-sm btn-outline-secondary">`+data[i]['cat_name']+`</button>
                    </div>
                </a><br>`
                );
            }

            $("#PostLoader").css("visibility","hidden");
            if(PostLoadMode == 0){//ON LOAD
                $("#searchResultTextBox").css("visibility","hidden");
            }else if(PostLoadMode == 1){//NORMAL SEARCH
                $("#searchResultText").html("From Search Result");
                $("#searchResultTextBox").css("visibility","visible");
            }else if(PostLoadMode == 2){//CATEGORY
                $("#searchResultText").html("From The Category "+cat_name);
                $("#searchResultTextBox").css("visibility","visible");
            }
        }

        $("#postFeed").empty();
        $("#PostLoader").css("visibility","visible");
        let cat_name = document.getElementById("categorySelect")[categoryid].text;

        $.post("",{
            loadPost:true,
            onload:PostLoadMode,
            filter:document.getElementById("FilterCheckBox").checked?1:0,
            search:document.getElementById("SearchBox").value,
            category:(PostLoadMode == 2)?categoryid:document.getElementById("categorySelect").value,
            sort:document.getElementById("SortPostRadio1").checked?0:1,
            date:document.getElementById("sortDate").value,
            canComment:document.getElementById("CanComment").checked?1:0,
            canSupport:document.getElementById("CanSupport").checked?1:0
        },postRes);
    }

    $(document).ready(getPostFeed(0));
</script>
</body>
</html>